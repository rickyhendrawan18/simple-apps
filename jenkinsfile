pipeline {
    agent { label 'dockerricky' }
    
    tools {nodejs "node-18"}

    stages {
        stage('Checkout SCM') {
            steps {
                git branch: 'main', url: 'https://github.com/rickyhendrawan18/simple-apps.git'
            }
        }
        stage('Build') {
            steps {
                sh '''npm install'''
            }
        }
        stage('Testing') {
            steps {
                sh '''npm test'''                
            }
        }
        stage('Code Review') {
            steps {
                sh '''sonar-scanner \
                -Dsonar.projectKey=simple-apps \
                -Dsonar.sources=. \
                -Dsonar.host.url=http://172.23.15.70:9000 \
                -Dsonar.login=sqp_0e7e35daf60c4100171fc0f8105a9ecbdb38ba11'''
            }
        }
        stage('Deploy compose') {
            steps {
                sh '''
                docker compose down
                docker image prune
                docker compose build
                docker compose up -d'''
            }
        }
        stage('Upload to Docker Registry') {
            steps {
                sh '''
                docker tag simple-apps-pipeline-apps rickyhendrawan18/simple-apps-pipeline-apps:v1.0
                docker login -u rickyhendrawan18@gmail.com -p Athen@1812
                docker push rickyhendrawan18/simple-apps-pipeline-apps:v1.0
                '''
            }
        }
    }
}